{
  "type": "miio:vacuum",
  "description": "Robot Cleaner",
  "properties": [
    {
      "type": "error_code",
      "description": "Error",
      "format": "uint8",
      "access": ["read"]
    },
    {
      "type": "state",
      "description": "State",
      "format": "uint8",
      "access": ["read", "write"],
      "value-list": [
        {
          "value": 1,
          "description": "initiating"
        }
      ]
    },
    {
      "type": "battery",
      "description": "Battery Level",
      "format": "uint8",
      "unit": "percentage",
      "access": ["read"]
    }
  ],
  "actions": [
    {
      "type": "app_start",
      "description": "Start a cleaning session"
    },
    {
      "type": "app_pause",
      "description": "Pause the current cleaning session"
    }
  ]
}
